        <Button x:Name="btn9" Content="9" HorizontalAlignment="Left" Height="65" Margin="574,450,0,0" VerticalAlignment="Top" Width="62" Click="Button_Click" FontSize="40"/>
        <Button x:Name="btn_0" Content="0" HorizontalAlignment="Left"  Height="65" Margin="338,750,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click" FontSize="45"/>
        <Button x:Name="btnDot" Content="." HorizontalAlignment="Left" Height="65" Margin="490,750,0,0" VerticalAlignment="Top" Width="52" Click="Button_Click" FontSize="45"/>
        <Button x:Name="btnAdd" Content="+" HorizontalAlignment="Left" Height="65" Margin="338,350,0,0" VerticalAlignment="Top" Width="62" Click="Button_Click" FontSize="43"/>
        <Button x:Name="btnSubstract" Content="-" HorizontalAlignment="Left" Height="65" Margin="456,350,0,0" VerticalAlignment="Top" Width="62" Click="Button_Click" FontSize="45"/>
