        <Button x:Name="btnEqual" Content="=" HorizontalAlignment="Left" Height="65" Margin="574,750,0,0" VerticalAlignment="Top" Width="62" Click="Button_Click" FontSize="45"/>
        <TextBox x:Name="tbCalculatorHistoric" HorizontalAlignment="Left" Height="131" Margin="112,68,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="524" Visibility="Visible" FontSize="45"/>
        <TextBlock x:Name="tbResult" HorizontalAlignment="Left" Height="87" Margin="338,204,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="298" Visibility="Visible" FontSize="41"/>
        <Button x:Name="btnSinus" Content="Sin" HorizontalAlignment="Left" Height="65" Margin="87,350,0,0" VerticalAlignment="Top" Width="62" Click="Button_Click" FontSize="35"/>
        <Button x:Name="btnCosin" Content="Cos" HorizontalAlignment="Left" Height="65" Margin="160,350,0,0" VerticalAlignment="Top" Width="62" Click="Button_Click" FontSize="35"/>
        <Button x:Name="btnTan" Content="Tan" HorizontalAlignment="Left" Height="65" Margin="240,350,0,0" VerticalAlignment="Top" Width="62" Click="Button_Click" FontSize="35"/>
        <Button x:Name="btnExponential" Content="Exp" HorizontalAlignment="Left" Height="65" Margin="87,450,0,0" VerticalAlignment="Top" Width="62" Click="Button_Click" FontSize="35"/>
        <Button x:Name="btnClear" Content="Ac" HorizontalAlignment="Left" Height="65" Margin="160,450,0,0" VerticalAlignment="Top" Width="62" Click="Button_Click" FontSize="35"/>
        <Button x:Name="btnDivide" Content="/" HorizontalAlignment="Left" Height="65" Margin="240,450,0,0" VerticalAlignment="Top" Width="62" Click="Button_Click" FontSize="35"/>
        <Button x:Name="btnSinH" Content="SinH" HorizontalAlignment="Left" Height="65" Margin="87,550,0,0" VerticalAlignment="Top" Width="62" Click="Button_Click" FontSize="35"/>
        <Button x:Name="btnCosinH" Content="CosH" HorizontalAlignment="Left" Height="65" Margin="160,550,0,0" VerticalAlignment="Top" Width="80" Click="Button_Click" FontSize="35"/>
        
